<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:d="http://xamarin.com/schemas/2014/forms/design"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             x:Class="INFT2051app.MainPage">

    <AbsoluteLayout x:Name ="main_layout">
        <!-- Image Background -->
        <BoxView x:Name="background" 
           BackgroundColor="LightGreen" 
           AbsoluteLayout.LayoutBounds="0, 0, 1, 1"
           AbsoluteLayout.LayoutFlags="All" />
        <!-- Left side (For touch controls) -->
        <BoxView x:Name="side_left"
           BackgroundColor="LightBlue"
           AbsoluteLayout.LayoutBounds="0, 0, 0.5, 1"
           AbsoluteLayout.LayoutFlags="All" />
        <!-- Right side (For touch controls) -->
        <BoxView x:Name="side_right"
           BackgroundColor="LightGreen"
           AbsoluteLayout.LayoutBounds="1, 0, 0.5, 1"
           AbsoluteLayout.LayoutFlags="All" />
        <!-- Status -->
        <BoxView x:Name="Status"
           BackgroundColor="LightPink"
           AbsoluteLayout.LayoutBounds="0, 0, 0.5, 0.1"
           AbsoluteLayout.LayoutFlags="All" />
        <!-- Credits -->
        <BoxView x:Name="Credits"
            BackgroundColor="LightGray"
            AbsoluteLayout.LayoutBounds="1, 0, 0.5, 0.1"
            AbsoluteLayout.LayoutFlags="All" />
        <!-- Options (Anchored below Credits but retains Height and Width)-->
        <BoxView x:Name="Options"
            BackgroundColor="Blue"
            AbsoluteLayout.LayoutBounds="1.5, 0.1, 0.5, 0.1"
            AbsoluteLayout.LayoutFlags="All" />
        
        
        <!-- DEBUG LABELS-->
        <Label x:Name="Happiness_value"
           TextColor = "Red"
           FontSize="Small"
           AbsoluteLayout.LayoutBounds="0.1, 0, 1, 0.1"
           AbsoluteLayout.LayoutFlags="All" >
            <Label.Text>
            Happiness: 0 
            Status: Happy
            </Label.Text>
        </Label>
        <Label x:Name ="Credits_number"
           TextColor = "Red"
           FontSize="Small"
           AbsoluteLayout.LayoutBounds="0.9, 0, 0.2, 0.1"
           AbsoluteLayout.LayoutFlags="All"> 
            <Label.Text>
                Credits: 0
            </Label.Text>
        </Label>
        <Label x:Name ="coordinates"
           TextColor = "Red"
           FontSize="Small"
           AbsoluteLayout.LayoutBounds="0.1, 0.1, 1, 0.1"
           AbsoluteLayout.LayoutFlags="All">
            <Label.Text>
                Pet X coord: 0 
                Pet Y coord: 0
            </Label.Text>
        </Label>
        <Label x:Name ="device"
           TextColor = "Red"
           FontSize="Small"
           AbsoluteLayout.LayoutBounds="0.1, 0.2, 1, 0.1"
           AbsoluteLayout.LayoutFlags="All">
            <Label.Text>
                Device Height: 0 
                Device Width: 0
            </Label.Text>
        </Label>
        <Label x:Name ="time"
           TextColor = "Red"
           FontSize="Small"
           AbsoluteLayout.LayoutBounds="0.1, 0.3, 1, 0.1"
           AbsoluteLayout.LayoutFlags="All">
            <Label.Text>
                Current time: 0
            </Label.Text>
        </Label>
        <Label x:Name ="cursor_position"
           TextColor = "Red"
           FontSize="Small"
           AbsoluteLayout.LayoutBounds="0.1, 0.4, 1, 0.1"
           AbsoluteLayout.LayoutFlags="All">
            <Label.Text>
                Pointer X:
                Pointer Y:
            </Label.Text>
        </Label>
        <Label x:Name ="petinfo"
           TextColor = "Red"
           FontSize="Small"
           AbsoluteLayout.LayoutBounds="0.1, 0.6, 1, 0.1"
           AbsoluteLayout.LayoutFlags="All">
            <Label.Text>
                Pet Info: 
            </Label.Text>
        </Label>
    </AbsoluteLayout>

</ContentPage>
